<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.dapp.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="59dp"
        android:layout_height="38dp"
        android:text="Marks"
        tools:layout_editor_absoluteX="12dp"
        tools:text="Marks"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_marks" />

    <EditText
        android:id="@+id/editText_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="100dp" />

    <EditText
        android:id="@+id/editText_marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_surname" />

    <Button
        android:id="@+id/button_add_data"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:text="Add data"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_view_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78dp"
        android:text="view all"
        app:layout_constraintLeft_toRightOf="@+id/button_add_data"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.651" />

    <Button
        android:id="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="update"
        app:layout_constraintTop_toBottomOf="@+id/button_add_data"
        tools:layout_editor_absoluteX="32dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:text="id"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_name"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="93dp" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="58dp"
        android:text="delete"
        app:layout_constraintLeft_toRightOf="@+id/button_update"
        app:layout_constraintTop_toBottomOf="@+id/button_view_all" />

</android.support.constraint.ConstraintLayout>
